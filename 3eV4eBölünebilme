import java.util.Scanner;
public class DivByUcveDort {

	public static void main(String[] args) {
		int k;//kullanıcıdan alınan değer
		int toplam=0;
		int adet=0;
		double ort;
		Scanner sc=new Scanner(System.in);
		
		System.out.println("Sayı giriniz:");
		k=sc.nextInt();
		
		for(int i = 1; i<=k ; i++) {
			if(i%3==0 && i%4==0) {
				toplam += i;
				adet++;
				
				
				
			
				
			}
			
		}
		ort = toplam / adet ;
		System.out.println(ort);
		
	}

}
